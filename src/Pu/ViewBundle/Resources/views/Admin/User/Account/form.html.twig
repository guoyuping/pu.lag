{% extends "PuViewBundle::Admin/base.html.twig" %}

{% block main %}
	<ol class="breadcrumb">
		<li class=""><a href="{{path('user_list')}}">用户管理</a></li>
		<li class="active">{% if action == 'new' %}新建账号 {% else %}修改账号{% endif %}</li>
	</ol>
	{{form_start(form)}}
	<div class="filter-tag panel panel-default">
		<div class="panel-heading"><span class="fa fa-edit"></span> {% if action == 'new' %}新建账号 {% else %}修改账号{% endif %}</div>
		<div class="panel-body row">
			<div class="col-md-8">
			    {{ form_row(form.username) }}
	    	
		    	{{ form_row(form.password) }}
		    	{{ form_row(form.roles) }}
			</div>
		</div>
		<div class="panel-footer text-center">
			<button type="submit" class="btn btn-default ladda-button" data-style="expand-right" data-spinner-color="#999999"><span class="ladda-label">{% if action == 'new' %}新建{% else %}修改{% endif %}</span></button>
		</div>
	</div>
	{{form_end(form)}}
{% endblock %}
{% block javascripts %}
	
	<script type="text/javascript">
		$(function(){
			Ladda.bind( 'button' );
		});
	</script>
{% endblock %}
