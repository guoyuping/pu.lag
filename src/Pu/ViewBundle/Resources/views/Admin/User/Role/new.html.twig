{% extends "PuViewBundle::Admin/base.html.twig" %}
{% block title %}编辑权限{% endblock %}
{% block main %}
	<ol class="breadcrumb">
		<li class=""><a href="{{path('role_list')}}">权限管理</a></li>
		<li class="active">编辑权限</li>
	</ol>
	{{form_start(form)}}
	<div class="filter-tag panel panel-default">
		<div class="panel-heading"><span class="fa fa-edit"></span> 编辑权限</div>
		<div class="panel-body row">
			<div class="col-md-8">
			    {{ form_row(form.name) }}
				{{ form_row(form.role) }}
			</div>
		</div>
		<div class="panel-footer text-center">
			<button type="submit" class="btn btn-default ladda-button" data-style="expand-right" data-spinner-color="#999999"><span class="ladda-label">保存</span></button>
		</div>
	</div>
	{{form_end(form)}}
{% endblock %}
{% block javascripts %}
	
	<script type="text/javascript">
		$(function(){
			Ladda.bind( 'button' );
		});
	</script>
{% endblock %}