{% extends "Backend/base.html.twig" %}
{% block title %}权限管理{% endblock %}
{% block main %}
	<ol class="breadcrumb">
		<li class="">权限管理</li>
	</ol>
	<div class="filter-tag panel panel-default">
		<div class="panel-heading"><span class="fa fa-list"></span> 权限管理<a class="btn btn-default btn-xs pull-right" href="{{path('role_new')}}"><span class="fa fa-plus" aria-hidden="true" ></span> 添加权限</a></div>
		<table class="table table-hover table-bordered">
			<tr>
				<th>名称</th>
				<th>权限</th>
				<th>操作</th>
			</tr>
			{% for role in pagination %}
				<tr>
					<td>{{role.name}}</td>
					<td>{{role.role}}</td>
					<td></td>
				</tr>
			{% endfor %}
		</table>
	</div>
	<div class="pull-right">
    {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}